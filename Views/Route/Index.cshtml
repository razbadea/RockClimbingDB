@model IEnumerable<RockClimbingDb.Models.Route>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@{ 
    if (User.IsInRole("Admin"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
}


<table class="table" id="RouteTable">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sector.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Sector.Crag.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sector.Crag.Area.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Sector.Crag.Area.Country.Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sector.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sector.Crag.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Sector.Crag.Area.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Sector.Crag.Area.Country.Name)
            </td>

            @{
                if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    </td>
                }
            }

        </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#RouteTable').DataTable();
    });
</script>