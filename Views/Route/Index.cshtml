@model IEnumerable<RockClimbingDb.Models.Route>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form asp-controller="Route" asp-action="GetRoutesByName">
    <p>
        Search for Route: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sector.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Sector.Crag.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sector.Crag.Area.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Sector.Crag.Area.Country.Name)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Grade)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Rating)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Sector.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Sector.Crag.Name)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Sector.Crag.Area.Name)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Sector.Crag.Area.Country.Name)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
    }

</table>
